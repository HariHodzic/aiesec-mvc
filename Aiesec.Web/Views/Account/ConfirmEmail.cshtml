@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Email Confirmed</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
</head>
<body>
<div>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <h3>@ViewBag.Error</h3>
    }
    else
    {
        <h3>
            Email confirmed <span class="text-success">successfully</span>. Click
            <a asp-controller="Account"
               asp-action="Login" class="text-info">
                HERE
            </a> to login.
        </h3>
    }

</div>
</body>
</html>