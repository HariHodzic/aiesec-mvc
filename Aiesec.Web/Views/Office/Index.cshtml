@model IEnumerable<Aiesec.Data.DTO.Response.Office>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<h2 class="text-center">Offices</h2>
<p>
    <a asp-controller="Office" asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="officeDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Capacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstablishmentDate)
                    </th>
                    <th>
                        City Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_DatatablesScripts");}
}
